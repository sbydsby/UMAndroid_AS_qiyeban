<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin" 
    android:background="@drawable/bg">
   
    <RelativeLayout
             android:id="@+id/relativelayout1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:gravity="center"
             android:layout_gravity="center_horizontal"> 
        
        <ImageView
            android:id="@+id/list_image"
            android:layout_width="99dip"
            android:layout_height="121dip"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:src="@drawable/touxiang_acc" />
    </RelativeLayout>
      
    <RelativeLayout
        android:id="@+id/RelativeLayout02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0px"
        android:layout_marginRight="15.0px"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_back"
        android:paddingTop="21.0px" >

        <EditText
            android:id="@+id/person_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5.0px"
            android:background="@drawable/input_edit_shape"
            android:hint="@string/prompt_name"
            android:maxLength="10"
            android:paddingLeft="75.0sp"
            android:saveEnabled="true"
            android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/person_name"
            android:layout_alignLeft="@+id/person_name"
            android:layout_alignTop="@+id/person_name"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:adjustViewBounds="true"
            android:src="@drawable/username" />

        <!-- android:inputType="textPassword" -->

        <EditText
            android:id="@+id/person_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/person_name"
            android:layout_alignRight="@+id/person_name"
            android:layout_below="@+id/person_name"
            android:layout_marginRight="1.0dip"
            android:background="@drawable/input_edit_shape"
            android:hint="@string/prompt_id"
            android:maxLength="18"
            android:paddingLeft="75.0sp"
            android:saveEnabled="true"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/person_id"
            android:layout_alignTop="@+id/person_id"
            android:gravity="center_vertical"
            android:paddingLeft="8sp"
            android:adjustViewBounds="true"
            android:src="@drawable/card" />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/relativelayout3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="15.0px"
            android:layout_marginRight="15.0px"
            android:gravity="center"
            android:orientation="horizontal" >
        
       <ImageView
            android:id="@+id/imgViewPhoto"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/scan_card_back" />
        
        <ImageView
            android:id="@+id/login_btn_next"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/imgViewPhoto"
            android:layout_marginLeft="25dp"
            android:adjustViewBounds="true"
            android:src="@drawable/scan_card_ok" />

      </RelativeLayout>

</LinearLayout>