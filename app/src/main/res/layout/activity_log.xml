<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/home_bg">

  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
            <RelativeLayout
                android:id="@+id/rl_log_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/log_type"
                    android:textColor="#d4a85f"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/textView1"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tvtype"
                    android:layout_marginTop="5dp"
                    android:background="#b5b5b5" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_log_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/log_time"
                    android:textColor="#d4a85f"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvcreatetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/textView2"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tvcreatetime"
                    android:layout_marginTop="5dp"
                    android:background="#b5b5b5" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_log_certsn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/log_certsn"
                    android:textColor="#d4a85f"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvcertsn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/textView3"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tvcertsn"
                    android:layout_marginTop="5dp"
                    android:background="#b5b5b5" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_log_certdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:text="@string/log_certdetail"
                    android:textColor="#d4a85f"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv_log_certdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="#00000000"
                    android:src="@drawable/arrow" 
                    android:contentDescription="@string/iv_log_certdetail"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/textView4"
                    android:layout_marginTop="15dp"
                    android:background="#b5b5b5" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_log_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
		        android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/log_notes"
                    android:textColor="#d4a85f"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvdescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView5"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:singleLine="false"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tvdescription"
                    android:layout_marginTop="5dp"
                    android:background="#b5b5b5" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_log_signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/log_signature"
                    android:textColor="#d4a85f"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvsign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView6"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:singleLine="false"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tvsign"
                    android:layout_marginTop="5dp"
                    android:background="#b5b5b5" />
            </RelativeLayout>          
       
	</LinearLayout>
    
</ScrollView>