<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Layout_cert_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#2969a6">
    
         <ImageView
            android:id="@+id/list_image"
            android:layout_width="fill_parent" 
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/touxiang_acc" />

         <TextView
           android:id="@+id/sealname"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="120dp"
           android:layout_marginLeft="20dp"
           android:text="印章别名:"
           android:textColor="#ffffff"
           android:textStyle="bold"
           android:textSize="18sp" />
         
         <ImageView
            android:id="@+id/show_cert"
            android:layout_width="30dp" 
            android:layout_height="30dp"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/sealname"
            android:src="@drawable/show_cert" />
            
       <TextView
          android:id="@+id/certbeforetxt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="160dp"
          android:layout_marginLeft="20dp"
          android:text="有效期:"
          android:textColor="#ffffff"
          android:textStyle="bold"
          android:textSize="18sp"/>
       
       <TextView
          android:id="@+id/certbefore"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="160dp"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@+id/certbeforetxt"
          android:text="有效期:"
          android:textColor="#ffffff"
          android:textStyle="bold"
          android:textSize="18sp"/>
       
       <TextView
          android:id="@+id/certvalid"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="160dp"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@+id/certbefore"
          android:text="~"
          android:textColor="#ffffff"
          android:textStyle="bold"
          android:textSize="18sp"/>
 
       <TextView
          android:id="@+id/certafter"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="160dp"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@+id/certvalid"
          android:text="有效期:"
          android:textColor="#ffffff"
          android:textStyle="bold"
          android:textSize="18sp"/>

    </RelativeLayout>

<!--</LinearLayout>-->
