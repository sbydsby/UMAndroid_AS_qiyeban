<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/camera"
        layout="@layout/view_v33_title" />

    <TextView
        android:id="@+id/txt_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="已将验证码发送至136****999"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <com.sheca.zhongmei.widget.vcedittext.VerificationCodeEditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:inputType="number"
android:id="@+id/edt_code"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:bottomLineHeight="2dp"
        app:bottomLineNormalColor="@color/bottom_line_color"
        app:bottomLineSelectedColor="@color/bottom_line_selected_color"
        app:cursorColor="@color/cursor_color"
        app:cursorWidth="2dp"
        app:figures="6"
        app:selectedBackgroundColor="@color/white"
        app:verCodeMargin="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收不到验证码?"
            android:visibility="gone"
            android:textSize="12sp" />


    </LinearLayout>

    <Button
        android:enabled="false"
        android:layout_marginTop="20dp"
        android:id="@+id/sign_in_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_login_yellow"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:text="@string/action_next" />
</LinearLayout>