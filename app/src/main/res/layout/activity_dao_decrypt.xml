<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dao_form"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" 
    android:background="@drawable/daodecryptbg"
    tools:context="${relativePackage}.${activityClass}">
    
    <RelativeLayout
          android:id="@+id/form_exit"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal" >
       <ImageView
           android:id="@+id/btn_back"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="30px"
           android:layout_marginLeft="30px"
           android:adjustViewBounds="true"
           android:src="@drawable/loginexit" /> 
           
       <ImageView
           android:id="@+id/btn_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="20px"
           android:layout_toRightOf="@id/btn_back"
           android:src="@drawable/dao_sign_title" /> 
     </RelativeLayout>
     
    <RelativeLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="0dp"
       android:layout_marginLeft="23dp"
       android:orientation="horizontal">
       
      <TextView
         android:id="@+id/textAppLabel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
         android:text="登录应用"
         android:textColor="#767676"
         android:textSize="18sp" />
     
      <TextView
         android:id="@+id/textAppView"
         android:layout_width="260dp"
         android:layout_height="34dp"
         android:layout_marginLeft="24dp"
         android:layout_marginTop="5dp"
         android:layout_toRightOf="@id/textAppLabel"
         android:textColor="#c9c9c9"
         android:textSize="18sp"
         android:ellipsize="end" />

    </RelativeLayout> 
    
     
    <RelativeLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:layout_marginLeft="23dp"
       android:orientation="horizontal">
 
      <TextView
         android:id="@+id/textOrgLabel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="70dp"
         android:layout_marginLeft="0dp"
         android:text="待解密内容"
         android:textColor="#767676"
         android:textSize="18sp" />
     
     <ScrollView
        android:layout_width="222dp"
        android:layout_height="150dp"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@id/textOrgLabel"
        android:fillViewport="true" >
        
       <TextView
         android:id="@+id/textOrgView"
         android:layout_width="222dp"
         android:layout_height="150dp"
         android:background="#ffffff"
         android:textColor="#c9c9c9"
         android:textSize="20sp" 
         android:ellipsize="end" />
      </ScrollView>
            
    </RelativeLayout>
     
     <RelativeLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="23dp"
       android:layout_marginTop="20dp"
       android:orientation="horizontal">
       
      <TextView
         android:id="@+id/textCertLabel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="0dp"
         android:text="数字证书"
         android:textColor="#767676"
         android:textSize="18sp" />
     
      <TextView
         android:id="@+id/textCertView"
         android:layout_width="190dp"
         android:layout_height="34dp"
         android:layout_marginLeft="24dp"
         android:background="#ffffff"
         android:textColor="#c9c9c9"
         android:textSize="20sp" 
         android:ellipsize="end"
         android:layout_toRightOf="@id/textCertLabel" />
      
      <ImageView
         android:id="@+id/btnCertView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_marginTop="0dp"
         android:layout_toRightOf="@id/textCertView" 
         android:src="@drawable/logindown"  />
     
      </RelativeLayout>
   
     <RelativeLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="23dp"
       android:layout_marginTop="20dp"
       android:orientation="horizontal">
       
      <TextView
         android:id="@+id/textPwdLabel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="15dp"
         android:layout_marginLeft="0dp"
         android:text="证书密码"
         android:textColor="#767676"
         android:textSize="18sp"/>
     
      <EditText
         android:id="@+id/textPwd"
         android:layout_width="220dp"
         android:layout_height="34dp"
         android:layout_marginLeft="24dp"
         android:layout_toRightOf="@id/textPwdLabel"
         android:background="@drawable/input_edit_shape"
         android:textColor="#000000"
         android:layout_marginTop="8dp"
         android:inputType="textPassword"
         android:hint="@string/prompt_dao_password">
      </EditText>             
     </RelativeLayout>
     
     
     <RelativeLayout
             android:id="@+id/relativelayout2"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"  
             android:gravity="center" >
                
         <ImageView
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:gravity="center" 
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/daodecryptbutton" />

     </RelativeLayout>
  
</LinearLayout>