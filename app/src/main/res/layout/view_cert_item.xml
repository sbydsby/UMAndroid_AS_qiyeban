<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Layout_cert_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#2969a6">
    
         <RelativeLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:gravity="center"
             android:orientation="horizontal" >
             
           <TextView
              android:id="@+id/certnickname"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:text="持有者:"
              android:textColor="#ffffff"
              android:textStyle="bold"
              android:textSize="18sp"  />
         </RelativeLayout>
  
         <TextView
           android:id="@+id/certname"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="120dp"
           android:layout_marginLeft="30dp"
           android:text="持有者:"
           android:textColor="#ffffff"
           android:textStyle="bold"
           android:textSize="18sp"  />
            
         <TextView
           android:id="@+id/certtype"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="40dp"
           android:layout_marginLeft="30dp"
           android:text="证书算法:"
           android:textColor="#ffffff"
           android:textStyle="bold"
           android:textSize="18sp" />

       <TextView
          android:id="@+id/savetype"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="80dp"
          android:layout_marginLeft="30dp"
          android:text="存储介质:"
          android:textColor="#ffffff"
          android:textStyle="bold"
          android:textSize="18sp"/>
       
       <TextView
          android:id="@+id/certbeforetxt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="160dp"
          android:layout_marginLeft="30dp"
          android:text="有效期:"
          android:textColor="#ffffff"
          android:textStyle="bold"
          android:textSize="18sp"/>
       
       <TextView
          android:id="@+id/certbefore"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="160dp"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@+id/certbeforetxt"
          android:text="有效期:"
          android:textColor="#ffffff"
          android:textStyle="bold"
          android:textSize="18sp"/>
       
       <TextView
          android:id="@+id/certvalid"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="160dp"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@+id/certbefore"
          android:text="~"
          android:textColor="#ffffff"
          android:textStyle="bold"
          android:textSize="18sp"/>
 
       <TextView
          android:id="@+id/certafter"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="160dp"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@+id/certvalid"
          android:text="有效期:"
          android:textColor="#ffffff"
          android:textStyle="bold"
          android:textSize="18sp"/>
       
       <TextView
           android:id="@+id/certusetype"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="100dp"
           android:layout_alignParentRight="true"
           android:layout_marginRight="11px"
           android:text=""
           android:textColor="#ffffff"
           android:textStyle="bold"
           android:textSize="13sp"  />
       
       <Button
            android:id="@+id/cert_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:background="@drawable/cert_normal" /> 

    </RelativeLayout>

<!--</LinearLayout>-->
