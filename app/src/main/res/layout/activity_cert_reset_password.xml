<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_light"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:background="#b5b5b5" />

    <android.widget.EditText
        android:id="@+id/et_original_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="@string/prompt_cert_orgpassword"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#d3d3d3"
        android:textCursorDrawable="@drawable/edit_cursor_color"
        android:visibility="gone">

    </android.widget.EditText>

    <TextView
        android:padding="15dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:id="@+id/txt_phone"
        android:textColor="@color/black"
        android:text="手机号: 1380000"
        android:textSize="18sp"
        android:layout_height="wrap_content" />

<LinearLayout
    android:background="@color/white"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <android.widget.EditText
        android:layout_weight="1"
        android:id="@+id/et_sms_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:cursorVisible="true"
        android:ems="10"
        android:hint="@string/cert_sms_code"
        android:inputType="number"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#d3d3d3"
        android:textCursorDrawable="@drawable/edit_cursor_color">


    </android.widget.EditText>

    <TextView
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="visible"
        android:id="@+id/tv_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_message"
        android:textColor="@color/toolbar_text_select"
        android:textSize="16sp"
      />

</LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#b5b5b5" />

    <android.widget.EditText
        android:id="@+id/et_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="@string/prompt_cert_password1"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#d3d3d3"
        android:textCursorDrawable="@drawable/edit_cursor_color">

        <requestFocus />
    </android.widget.EditText>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#b5b5b5" />

    <android.widget.EditText
        android:id="@+id/et_new_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="@string/prompt_cert_password2"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#d3d3d3"
        android:textCursorDrawable="@drawable/edit_cursor_color"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#b5b5b5" />

    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="@string/app_ok"
        style="@style/btn_ok"
        />

</LinearLayout>
