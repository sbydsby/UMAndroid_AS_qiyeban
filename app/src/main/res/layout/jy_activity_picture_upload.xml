<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <include
        android:id="@+id/camera"
        layout="@layout/childactivity_camera_view" />

    <com.facefr.view.VerticalTextView
        android:id="@+id/shotPhotoResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:textColor="@color/red"
        android:visibility="invisible"/>
    
     <com.facefr.view.CustomHeaderLayOut
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        custom:titleText="@string/idcard_scan" 
        android:visibility="gone"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/actionbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:src="@drawable/icon_number_1" 
        android:contentDescription="@string/img_describe"/>

    <LinearLayout
        android:id="@+id/PreviewHintTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center" >

        <com.facefr.view.VerticalTextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/picture_IdPhoto_hint2"
            android:textColor="@color/upload_white_color"
            android:textStyle="bold" />

        <com.facefr.view.VerticalTextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/picture_IdPhoto_hint1"
            android:textColor="@color/upload_white_color"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/PictureHintTxtLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:visibility="visible" >

        <com.facefr.view.VerticalTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/picture_IdPhoto_hint3"
            android:textColor="@color/upload_white_color"/>

        <com.facefr.view.VerticalTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/picture_IdPhoto_hint4"
            android:textColor="@color/lightgreen"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="bottom">

            <Button
                android:id="@+id/camera_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_photo_bg"
                android:layout_gravity="bottom"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <Button
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_next_bg"
                android:layout_gravity="bottom"
                android:padding="11dp"
                android:text="@string/btn_next"
                android:textColor="@color/white"
                android:textStyle="bold" 
                />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>