<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Layout_seal_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sealcardview"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="80dp"
        android:paddingTop="10dp"
        android:paddingBottom="30dp">
              
         <ImageView
            android:id="@+id/list_image"
            android:layout_width="fill_parent" 
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/touxiang_acc" />

         <TextView
           android:id="@+id/sealname"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="印章别名:"
           android:layout_marginTop="10dp"
           android:gravity="center_horizontal"
           android:textColor="@color/cert_text"
           android:textSize="15sp" />
         
          <ImageView
            android:id="@+id/show_cert"
            android:layout_width="30dp" 
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/sealname"
            android:src="@drawable/show_cert"
            android:visibility="gone" />
            
       <TextView
          android:id="@+id/certbeforetxt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:text="有效期:"
          android:textColor="@color/white"
          android:textStyle="bold"
          android:textSize="18sp"
          android:visibility="gone" />
       
       <TextView
          android:id="@+id/certbefore"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@+id/certbeforetxt"
          android:text="有效期:"
          android:textColor="@color/white"
          android:textStyle="bold"
          android:textSize="18sp"
          android:visibility="gone" />
       
       <TextView
          android:id="@+id/certvalid"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@+id/certbefore"
          android:text="~"
          android:textColor="@color/white"
          android:textStyle="bold"
          android:textSize="18sp"
          android:visibility="gone" />
 
       <TextView
          android:id="@+id/certafter"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@+id/certvalid"
          android:text="有效期:"
          android:textColor="@color/white"
          android:textStyle="bold"
          android:textSize="18sp"
          android:visibility="gone" />
         
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/seal_cert"
        android:visibility="gone"
        />

</RelativeLayout>

