<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"    
    android:orientation="horizontal"
    android:padding="15dip" >

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="15dip"
        android:padding="5dip" 
        android:visibility="gone">

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@drawable/certificate" />
    </LinearLayout>

    <TextView
        android:id="@+id/organization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="organization"
        android:textColor="#828282"
        android:paddingTop="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone"/>

    <ImageView
            android:id="@+id/list_image2"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:background="#00000000"
            android:layout_below="@id/organization"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/thumbnail"
            android:src="@drawable/user" 
            android:visibility="gone"/>
    
    <TextView
        android:id="@+id/commonname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/organization"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/list_image2"
        android:layout_gravity="center"
        android:text="commonname"
        android:textColor="#828282"
        android:textStyle="bold"
        android:textSize="15sp" />
    
    <ImageView
            android:id="@+id/list_image4"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:background="#00000000"
            android:layout_below="@id/organization"
            android:layout_toRightOf="@+id/list_image2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="90dp"
            android:src="@drawable/certtype"
            android:visibility="gone" />
    
    <TextView
        android:id="@+id/certtype"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/organization"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/list_image4"
        android:text="证书"
        android:textColor="#828282"
        android:textStyle="bold"
        android:textSize="15sp"
        android:visibility="gone" />
    
    <ImageView
            android:id="@+id/list_image3"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:background="#00000000"
            android:layout_below="@id/commonname"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/thumbnail"
            android:src="@drawable/time"
            android:visibility="gone" />
    
     <TextView
        android:id="@+id/validtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/commonname"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/list_image3"
        android:text="duration"
        android:textColor="#acacac"
        android:textSize="12sp"
        android:textStyle="bold" 
        android:visibility="gone"/>
     
        <LinearLayout
        android:id="@+id/thumbnail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:background="@drawable/image_bg"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>