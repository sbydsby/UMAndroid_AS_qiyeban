<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Layout_cert_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/certcardview"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="80dp"
        android:paddingTop="5dp"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/certdetail_certsn2"
                android:textColor="@color/white" 
                android:visibility="gone" />

            <TextView
                android:id="@+id/certsn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="12324567890"
                android:textColor="@color/white"
                android:visibility="gone"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
          <TextView
              android:id="@+id/tv_cert_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/certdetail_leftdays"
              android:layout_weight="1"
            android:textColor="@color/cert_text"
            android:textSize="18sp" />
        
          <TextView
                android:id="@+id/certtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:background="@drawable/tv_stroke_white"
                android:paddingLeft="5dp"
                android:text="Test"
                android:textColor="@color/cert_type_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_leftday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/certafter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/cert_text"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day"
                android:textColor="@color/cert_text"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="@string/cert_holder"
            android:textColor="@color/bg_yellow" 
            android:visibility="gone"/>

        <TextView
            android:id="@+id/certnickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="XXXXXXXXX"
            android:textColor="@color/white"
            android:textSize="15sp"  />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/cert_seal"
        android:visibility="gone"
        />

</RelativeLayout>

