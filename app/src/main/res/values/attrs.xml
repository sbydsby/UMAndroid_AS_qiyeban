    <attr name="sub_text" format="string|reference|integer" />
    <attr name="sub_text_color" format="reference|color" />
    <attr name="sub_text_size" format="dimension|string|reference|integer" />
</declare-styleable>

    <declare-styleable name="TextEditItem">
        <attr name="teitem_background_color" format="reference|integer" />

        <attr name="tv_text" format="string|reference|integer" />
        <attr name="tv_text_color" format="reference|color" />
        <attr name="tv_text_size" format="dimension|string|reference|integer" />

        <attr name="edit_hint" format="string|reference|integer" />
