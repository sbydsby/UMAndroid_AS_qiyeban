<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>

            <!-- 定义实心颜色，也就是填充颜色值 -->
           <solid android:color="@android:color/transparent" />

            <!-- 圆角 -->
            <corners android:radius="5dp" />

            <!-- 定义圆角的边框颜色值 -->
            <stroke
                android:width="3dp"
                android:color="@color/green" />
        </shape>
    </item>

</layer-list>