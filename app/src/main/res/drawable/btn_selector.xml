<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed -->
    <item android:state_pressed="true" >
        <shape  android:shape="rectangle">
            <gradient
                android:startColor="#4884ba"
                android:endColor="#4884ba" />           
            <corners
                android:radius="2dp" />
        </shape>
    </item>
   <!-- focus -->
   <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#4884ba"
                android:endColor="#4884ba" />            
            <corners
                android:radius="2dp" />
        </shape>
    </item>
<!-- default -->
    <item>        
        <shape>
            <gradient
                android:startColor="#4884ba"
                android:endColor="#4884ba"/>
            <corners
                android:radius="2dp" />
        </shape>
    </item>
</selector>
